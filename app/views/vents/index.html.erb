<link rel="stylesheet" type="text/css" href="vent_index.css">
<div class="col-sm-3"></div>
<div class="col-sm-6">

<h1>Listing Vents</h1>

<div class="container">
  <table>
    <tbody>
      <% @vents.each do |vent| %>
        <tr class="row_1">
          <td colspan="3"><strong><%= vent.title %></strong> &nbsp&nbsp<i>by</i> <%= vent.user_id %></td>
       
        </tr>
        <tr>
          <td><p><%= vent.vent_text %></p></td>
        </tr>
        <tr class="row_2">
          <td colspan "3"><%= link_to 'Show', vent %>
          <%= link_to 'Edit', edit_vent_path(vent) %>
          <%= link_to 'Destroy', vent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <tr>
          <td colspan="3"></td>
        </tr>
        <tr>
          <td colspan="3"></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
</div>

<div class="col-sm-3">
  <%= link_to 'New Vent', new_vent_path, :class => "btn btn-primary_newvent", :role => 'button'  %>
</div>

